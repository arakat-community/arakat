{
    "defaultSeverity": "warning",
    "extends": ["tslint:recommended", "tslint-react"],
    "rules": {
        "indent": [
            true,
            "spaces",
            2
        ],
        "max-line-length": [true, 140],
        "variable-name": [
            true,
            "ban-keywords",
            "allow-leading-underscore"
        ],
        "completed-docs": [
            true,
            "classes",
            "enums",
            "functions",
            "methods"
        ],
        "comment-format": [
            true,
            "check-lowercase", {
                "ignore-words": ["TODO", "HACK"]
            }
        ],
        "align": [
            true,
            "members",
            "elements",
            "arguments",
            "parameters",
            "statements"
        ],
        "class-name": true,
        "jsx-no-multiline-js": false,
        "object-literal-sort-keys":false,
        "no-console":false,
        "no-debugger":true
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "src/**/*.spec.tsx"
        ]
    }
}
